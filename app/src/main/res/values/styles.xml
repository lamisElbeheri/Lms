<resources>



    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/actionbar</item>
        <item name="colorPrimaryDark">@color/statusBar</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
 <style name="FeedbackTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/actionbar</item>
        <item name="colorPrimaryDark">@color/statusBar</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>



    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#000</item>
        <item name="colorControlNormal">#000</item>
        <item name="colorControlHighlight">#000</item>
    </style>

    <style name="MyAlertDialogMaterialStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/actionbar</item>
        <item name="android:textColorPrimary">@color/txtColor</item>
        <item name="android:textColor">@color/txtColor</item>
        <item name="android:background">@color/white</item>
    </style>


    <!-- Theme.AppCompat.Light is not a dialog theme -->
    <style name="DateDialogTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/actionbar</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/actionbar</item>
        <item name="textColorAlertDialogListItem">@android:color/white</item>
        <item name="colorAccent">@color/actionbar</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--<item name="android:windowBackground">@drawable/background_dialog</item>-->
        <item name="android:windowBackground">@color/statusBar</item>
    </style>


    <style name="DialogTheme" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>



    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:textColor">@color/txtColor</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="colorPrimaryDark">@color/actionbar</item>
    </style>

    <declare-styleable name="CircleBorderImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <style name="CustomSwith" parent="Theme.AppCompat">
        <item name="colorAccent">#707070</item>

    </style>

    <style name="tab_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_6sdp</item>

    </style>



    <style name="MyAppThemeTransparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/actionbar</item>
        <item name="colorPrimaryDark">@color/statusBar</item>
        <item name="colorAccent">@color/actionbar</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColor">@color/txtColor</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:background">@android:color/transparent</item>
    </style>




    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="tabPaddingStart">@dimen/_6sdp</item>
        <item name="tabPaddingEnd">@dimen/_6sdp</item>
    </style>

    <style name="MediaPickerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/actionbar</item>
        <item name="colorPrimaryDark">@color/actionbar</item>
        <item name="colorAccent">@color/actionbar</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">

    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

    </style>



    <style name="blueThemeToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/actionbar</item>
        <item name="colorPrimaryDark">@color/actionbar</item>
        <item name="colorAccent">@color/actionbar</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/actionbar</item>
        <item name="android:windowBackground">@color/viewBackground</item>
        <item name="actionMenuTextColor">@color/actionbar</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>


    <style name="Spinner" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
